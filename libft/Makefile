CC			= gcc
CFLAGS		= -Wall -Wextra -Werror
MAINFILE	= main.c
CLIBS		= -L . -lft
RM			= rm -f
AR			= ar r
OBJS		= $(SRCS:%.c=%.o)
LIBNAME		= libft.h
NAME		= libft.a
TARGET		= main.exe
SRCS		= ft_memset.c ft_bzero.c ft_memcpy.c ft_memccpy.c ft_memmove.c ft_memchr.c ft_strlen.c ft_strlcpy.c ft_strlcat.c ft_strchr.c ft_strrchr.c ft_isalpha.c ft_strncmp.c ft_atoi.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_toupper.c ft_tolower.c ft_calloc.c ft_strdup.c ft_substr.c ft_strjoin.c ft_strtrim.c ft_split.c ft_itoa.c ft_strmapi.c ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c ft_memcmp.c ft_strnstr.c calc_utility.c ft_isspace.c ft_strncpy.c ft_lstnew.c ft_lstadd_front.c ft_lstsize.c ft_lstlast.c ft_lstadd_back.c ft_lstdelone.c ft_lstclear.c ft_lstiter.c ft_lstmap.c
B_SRCS		= $(SRCS)
B_OBJS		= $(B_SRCS:%.c=%.o)

all:	$(NAME)

$(NAME):
			$(CC) $(CFLAGS) -c $(SRCS)
			$(AR) $(NAME) $(OBJS)

bonus:
			$(CC) $(CFLAGS) -c $(B_SRCS)
			$(AR) $(NAME) $(B_OBJS)

clean:
			$(RM) *.o

fclean:	clean
			$(RM) $(NAME)

re:	fclean all

comp:	all
			$(CC) $(MAINFILE) $(CLIBS) -o $(TARGET)
			# $(CC) $(CCFLAGS) $(MAINFILE) $(CLIBS) -o $(TARGET)

.PHONY: all clean fclean re comp